<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/container_real_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/accb_selectable_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/container_real_item"
        app:layout_constraintBottom_toBottomOf="@id/container_real_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/container_real_item"
        android:id="@+id/accb_selectable_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>
